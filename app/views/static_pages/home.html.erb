<% provide(:title, "Home") %>

<div class="section no-pad-bot" id="index-banner">
  <div class="container">
    <div class="row center">
      <h2 class="header orange-text">This is the RandomFood project.</h2>
      <h5 class="header col s12 light">A nice way to find out what to eat today.</h5>
    </div>
  </div>
</div>

<div class="row center">
  <h3 class="header col s12 light">Search recipes with your <span class="enlighted-text">sh*ts</span> here.</h5>
  <div class="container">
    <!-- When submit the form, the view rendered will be the index view of our articles resource -->
    <%= form_tag(search_path, :method => 'get') do %>
      <div class="form-group">
        <%= autocomplete_field_tag 'search', '', autocomplete_ingredient_name_static_pages_path, 'data-delimiter' => ', ', :multiple => true, class: "form-control", placeholder: "Ingredients list" %>
        <%= submit_tag "Search!", class: "btn-large waves-effect waves-light orange"%>
      </div>
    <% end %>
  </div>
</div>
