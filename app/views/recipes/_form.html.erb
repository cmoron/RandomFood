<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <%= form_for(@recipe) do |f| %>
      <% if @recipe.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

          <ul>
            <% @recipe.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: :name %>
      </div>
      <div class="form-group">
        <%= autocomplete_field_tag 'new_recipe_ingredients_list', '', autocomplete_ingredient_name_static_pages_path, 'data-delimiter' => ', ', :multiple => true, class: "form-control", placeholder: "Ingredients list" %>
      </div>
      <div class="actions">
        <%= f.submit class: "btn btn-primary"%>
        <%= link_to "Back", recipes_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
